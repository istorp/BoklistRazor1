@page
@model BoklistRazor1.Pages.Booklist.UpsertModel

<br />
<h2 class="text-info">@(Model.Books.Id!=0? "Edit":"create") Books</h2>
<br />

<div class="border container" style="Padding:30px;">
    <form method="post">
        @if(Model.Books.Id !=0)
        {
                <input type="hidden" asp-for="Books.Id" />
         }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Name" class="form-control" />
            </div>
            <span asp-validation-for="Books.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.Auther"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Auther" class="form-control" />
            </div>
            <span asp-validation-for="Books.Auther" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Books.ISBN" class="text-danger"></span>
        </div>
        <div class="form-goup row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Books.Id!= 0 ? "Update":"create")</button>
                @*<input type="submit" value="Update" class="btn btn-primary form-control" />*@
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>

</div>
@section Scripts{
    <partial name="_validationScriptsPartial" />
}